<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Zeltlager.Calendar.CalendarEventEditPage" Title="Termin bearbeiten">
	<ContentPage.Content>
		<StackLayout Spacing="0" Padding="0">
			<StackLayout Orientation="Horizontal" Padding="5">
				<Label Text="Titel: "/>
				<Entry x:Name="titleEntry" HorizontalOptions="FillAndExpand" Text="{Binding Title, Mode=TwoWay}"/>
			</StackLayout>
			<StackLayout Orientation="Horizontal" Padding="5">
				<Label Text="Zusatzbeschreibung: "/>
				<Entry x:Name="detailEntry" HorizontalOptions="FillAndExpand" Text="{Binding Detail, Mode=TwoWay}"/>
			</StackLayout>
			<StackLayout Orientation="Horizontal" Padding="5">
				<Label Text="Tag: "/>
				<DatePicker x:Name="datePicker" Date="{Binding Time, Mode=TwoWay}"/>
			</StackLayout>
			<StackLayout Orientation="Horizontal" Padding="5">
				<Label Text="Uhrzeit: "/>
				<TimePicker x:Name="timePicker" Time="{Binding TimeSpan, Mode=TwoWay}"/>
			</StackLayout>
			<Button Text="Speichern" Clicked="OnSaveClicked"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
