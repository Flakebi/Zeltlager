					 Orientation="Vertical"
					 Spacing="15"
					 Padding="10,10,10,0">
			<Button x:Name="synchronizeButton" Text="Synchronisieren" Clicked="OnSynchronizeClicked" Style="{StaticResource DarkButtonStyle}"/>
			<Button x:Name="competitionButton" Text="WettkÃ¤mpfe" Clicked="OnCompetitionClicked" Style="{StaticResource DarkButtonStyle}"/>
