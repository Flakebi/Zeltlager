<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="Zeltlager.LogPage"
			 Title="Allgemeines" Style="{StaticResource BaseStyle}">
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand"
					 HorizontalOptions="FillAndExpand"
					 Orientation="Vertical"
					 Spacing="15"
					 Padding="10,10,10,0">
			<Label Text="Log: "/>
			<StackLayout Orientation="Horizontal"
						 Spacing="15">
				<StackLayout Orientation="Vertical" Spacing="15">
					<Label Text="Info"/>
					<Switch IsToggled="{Binding info}" Toggled="updateUI"/>
				</StackLayout>
				<StackLayout Orientation="Vertical" Spacing="15">
					<Label Text="Warning"/>
					<Switch IsToggled="{Binding warning}" Toggled="updateUI"/>
				</StackLayout>
				<StackLayout Orientation="Vertical" Spacing="15">
					<Label Text="Error"/>
					<Switch IsToggled="{Binding error}" Toggled="updateUI"/>
				</StackLayout>
				<StackLayout Orientation="Vertical" Spacing="15">
					<Label Text="Exception"/>
					<Switch IsToggled="{Binding exception}" Toggled="updateUI"/>
				</StackLayout>
				</StackLayout>
			<ScrollView>
				<Label x:Name="logLabel" VerticalOptions="FillAndExpand"/>
			</ScrollView>
			<Button Text="Log lÃ¶schen" Clicked="OnDeleteClicked"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
