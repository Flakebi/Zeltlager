<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Zeltlager.LogPage"
			 Title="Log" Style="{StaticResource BaseStyle}">
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand"
					 HorizontalOptions="FillAndExpand"
					 Orientation="Vertical"
					 Spacing="15"
					 Padding="10,10,10,0">
			<StackLayout Orientation="Horizontal"
						 Spacing="15">
				<StackLayout Orientation="Vertical" Spacing="15">
					<Label Text="Info"/>
					<Switch IsToggled="{Binding Info}" Toggled="UpdateUI"/>
				</StackLayout>
				<StackLayout Orientation="Vertical" Spacing="15">
					<Label Text="Warning"/>
					<Switch IsToggled="{Binding Warning}" Toggled="UpdateUI"/>
				</StackLayout>
				<StackLayout Orientation="Vertical" Spacing="15">
					<Label Text="Error"/>
					<Switch IsToggled="{Binding Error}" Toggled="UpdateUI"/>
				</StackLayout>
				<StackLayout Orientation="Vertical" Spacing="15">
					<Label Text="Exception"/>
					<Switch IsToggled="{Binding Exception}" Toggled="UpdateUI"/>
				</StackLayout>
			</StackLayout>
			<ScrollView>
				<Label x:Name="logLabel" VerticalOptions="FillAndExpand"/>
			</ScrollView>
			<Button Image="{x:Static local:Icons.DELETE}" Clicked="OnDeleteClicked"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
